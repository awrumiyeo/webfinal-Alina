<h1>Manage Users</h1>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.role %></td>
        <td>
          <form action="/admin/users/<%= user._id %>" method="POST">
            <select name="role">
              <option value="admin" <% if(user.role === 'admin') { %> selected <% } %> >Admin</option>
              <option value="editor" <% if(user.role === 'editor') { %> selected <% } %> >Editor</option>
            </select>
            <button type="submit">Change Role</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
